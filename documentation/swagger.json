{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Dog Collar Api",
        "description": "A simple API to receive JSON Payloads from Dog Collars and save and query them to a DynamoDB",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "/api/",
            "description": "Local Dev"
        },
        {
            "url": "/api/",
            "description": "With AWS"
        }
    ],
    "tags": [
        {
            "name": "Dog Collar Requests",
            "description": "API for Dog Collar Responses"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/fetch/all": {
            "get": {
                "tags": [
                    "Dog Collar Requests"
                ],
                "summary": "Gets all the Dog Collar Responses from the DB",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "500":{
                      "description": "Server side error"
                    }
                }
            }
          },
        "/fetch/ByPartitionAndSortKeys": {
            "get": {
                "tags": [
                    "Dog Collar Requests"
                ],
                "summary": "Gets a specific Dog Collar Responses from the DB",
                "parameters": [
                    {
                        "in": "query",
                        "name": "Values",
                        "required": true,
                        "description": "Enter a partition key and a sort key to return a specific response",
                        "schema": {
                            "type": "object",
                            "properties": {
                              "partitionKey": {
                                "type": "string"
                              },
                              "sortKey": {
                                "type": "string"
                              }
                            },
                            "example": {
                              "partitionKey": "54668-30073-6ad9de2",
                              "sortKey": "1565105507274_BARK"
                            }
                        },
                        "style": "form",
                        "explode": "true"
                      }
                ],
                "responses": {
                  "200": {
                      "description": "success"
                  },
                  "400": {
                      "description": "valid query parameter required"
                  },
                  "500": {
                    "description": "server side error"
                }
              }
            }
    },
    "/fetch/allByPartitionKey": {
      "get": {
          "tags": [
              "Dog Collar Requests"
          ],
          "summary": "Gets all Responses from a specific collar from the DB using the Partition Key",
          "parameters": [
              {
                  "in": "query",
                  "name": "Values",
                  "required": true,
                  "description": "Returns all reponses for a specific Partition Key",
                  "schema": {
                      "type": "object",
                      "properties": {
                        "partitionKey": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "partitionKey": "54668-30073-6ad9de2"
                      }
                  },
                  "style": "form",
                  "explode": "true"
                }
          ],
          "responses": {
              "200": {
                  "description": "success"
              },
              "400": {
                  "description": "valid query parameter required"
              },
              "500": {
                "description": "server side error"
            }
          }
      }
  },
    "/fetch/ByPartitionAndActivity": {
      "get": {
          "tags": [
              "Dog Collar Requests"
          ],
          "summary": "Gets all the responses for a specific Parttion Key and filters by the supplied activity type",
          "parameters": [
              {
                  "in": "query",
                  "name": "Values",
                  "required": true,
                  "description": "Enter a partition key and an activity type (i.e. 'BARK', 'PHYSICAL_ACTIVITY', 'LOCATION') ",
                  "schema": {
                      "type": "object",
                      "properties": {
                        "partitionKey": {
                          "type": "string"
                        },
                        "activityType": {
                          "type": "string",
                          "enum": [
                            "BARK",
                            "PHYSICAL_ACTIVITY",
                            "LOCATION"
                          ]
                        }
                      },
                      "example": {
                        "partitionKey": "54668-30073-6ad9de2",
                        "activityType": "PHYSICAL_ACTIVITY"
                      }
                  },
                  "style": "form",
                  "explode": "true"
                }
          ],
          "responses": {
            "200": {
                "description": "success"
            },
            "400": {
                "description": "valid query parameter required"
            },
            "500": {
              "description": "server side error"
          }
        }
      }
  },
  "/fetch/allByActivityType": {
    "get": {
        "tags": [
            "Dog Collar Requests"
        ],
        "summary": "Gets all Dog Collar Responses with the supplied activity type from the DB",
        "parameters": [
            {
                "in": "query",
                "name": "Values",
                "required": true,
                "description": "Returns all responses of a set activity type ('BARK', 'PHYSICAL_ACTIVITY', 'LOCATION')",
                "schema": {
                    "type": "object",
                    "properties": {
                      "activityType": {
                        "type": "string",
                        "enum": [
                          "BARK",
                          "PHYSICAL_ACTIVITY",
                          "LOCATION"
                        ]
                      }
                    },
                    "example": {
                      "activityType": "BARK"
                    }
                },
                "style": "form",
                "explode": "true"
              }
        ],
        "responses": {
          "200": {
            "description": "success"
          },
          "400": {
            "description": "valid query parameter required"
          },
          "500": {
            "description": "server side error"
          }
        }
    }
  },
  "/fetch/allByActivity": {
    "get": {
        "tags": [
            "Dog Collar Requests"
        ],
        "summary": "Gets a specific Dog Collar Responses from the DB",
        "parameters": [
            {
                "in": "query",
                "name": "Values",
                "required": true,
                "description": "Cat with id",
                "schema": {
                    "type": "object",
                    "properties": {
                      "activity": {
                        "type": "string",
                        "enum": [
                          "low",
                          "medium",
                          "high"
                        ]
                      }
                    },
                    "example": {
                      "activity": "high"
                    }
                },
                "style": "form",
                "explode": "true"
              }
        ],
        "responses": {
            "200": {
                "description": "success"
            },
            "404": {
                "description": "Failed. Cat not found."
            }
        }
    }
  },
  "/fetch/allBylocation": {
    "get": {
        "tags": [
            "Dog Collar Requests"
        ],
        "summary": "Gets a specific Dog Collar Responses from the DB",
        "parameters": [
            {
                "in": "query",
                "name": "Values",
                "required": true,
                "description": "Cat with id",
                "schema": {
                    "type": "object",
                    "properties": {
                      "location": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "location": "90210"
                    }
                },
                "style": "form",
                "explode": "true"
              }
        ],
        "responses": {
            "200": {
                "description": "success"
            },
            "404": {
                "description": "Failed. Cat not found."
            }
        }
    }
  },
  "/pushCollarData": {
    "post": {
        "tags": [
            "Dog Collar Requests"
        ],
        "summary": "Gets a specific Dog Collar Responses from the DB",
        "requestBody": {
                "required": true,
                "description": "Cat with id",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "partitionKey": {
                          "type": "string"
                        },
                        "sortKey": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "partitionKey": "abc4",
                        "sortKey": "1",
                        "dogName": "Tyson",
                        "barking": "medium",
                        "activity": "low",
                        "location": "37901"
                      }
                    }
                  }
              },
                "style": "form",
                "explode": "true"
          },
        "responses": {
            "200": {
                "description": "success"
            },
            "404": {
                "description": "Failed. Cat not found."
            }
        }
    }
  },
    "/remove": {
      "delete": {
          "tags": [
              "Dog Collar Requests"
          ],
          "summary": "Gets a specific Dog Collar Responses from the DB",
          "parameters": [
              {
                  "in": "query",
                  "name": "Values",
                  "required": true,
                  "description": "Cat with id",
                  "schema": {
                      "type": "object",
                      "properties": {
                        "partitionKey": {
                          "type": "string"
                        },
                        "sortKey": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "partitionKey": "abc1",
                        "sortKey": "20"
                      }
                  },
                  "style": "form",
                  "explode": "true"
                }
          ],
          "responses": {
              "200": {
                  "description": "success"
              },
              "404": {
                  "description": "Failed. Cat not found."
              }
          }
      }
    }
  }
}
