          "requestBody": {
              "description": "CollarResponse Object",
              "required": true,
              "content": {
                  "application/json": {
                      "schema": {
                          "$ref": "#/definitions/CollarResponse"
                      }
                  }
              }
          },
          "produces": [
              "application/json"
          ],
          "responses": {
              "200": {
                  "description": "OK",
                  "schema": {
                      "$ref": "#/definitions/id"
                  }
              },
              "400": {
                  "description": "Failed. Bad post data."
              }
          }
      }
    },
  "/remove": {
    "delete": {
      "summary": "Delete cat with given ID",
      "tags": [
          "Dog Collar Requests"
      ],
      "parameters": [
          {
              "in": "path",
              "name": "id",
              "required": true,
